{
    "name": "vscode-acc-snippets",
    "publisher": "developersoapbox",
    "displayName": "Adobe Campaign Snippets",
    "description": "Useful snippets for Adobe Campaign development",
    "version": "1.0.0",
    "icon": "images/logo.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/DeveloperSoapbox/vscode-acc-snippets.git"
    },
    "keywords": [
        "Adobe Campaign",
        "ACC",
        "ACS"
    ],
    "scripts": {
        "package": "npx vsce package"
    },
    "engines": {
        "vscode": "^1.44.0"
    },
    "categories": [
        "Snippets"
    ],
    "contributes": {
        "snippets": [
            {
                "language": "html",
                "path": "./snippets/acc-web.json"
            },
            {
                "language": "javascript",
                "path": "./snippets/acc-javascript.json"
            },
            {
                "language": "xml",
                "path": "./snippets/acc-xml.json"
            }
        ]
    }
}
